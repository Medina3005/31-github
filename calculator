num1 = int(input("Enter first number: "))
num2 = int(input("Enter second number: "))
operation = input("What do you want to do? Options are +, -, /, or *:")

if operation == '+':
    print("Operation: ", num1 + num2)
if operation == '-':
    print("Operation: ", num1 - num2)
if operation == '/':
    print("Operation: ", num1 / num2)
if operation == '*':
    print("Operation: ", num1 * num2)
else:
    print("Invalid choice!")
    

